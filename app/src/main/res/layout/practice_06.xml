<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/target1"
        android:background="#2196F3"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>

    <TextView
        android:background="#FF5722"
        android:layout_width="100dp"
        android:layout_toRightOf="@+id/target1"
        android:layout_below="@+id/target1"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:id="@+id/target2"
        android:background="#FF5722"
        android:layout_toRightOf="@+id/target1"
        android:layout_above="@+id/target1"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:id="@+id/target3"
        android:background="#FF5722"
        android:layout_width="100dp"
        android:layout_toLeftOf="@+id/target1"
        android:layout_above="@+id/target1"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:background="#FF5722"
        android:layout_toLeftOf="@id/target1"
        android:layout_below="@+id/target1"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:background="#FF5722"
        android:layout_toStartOf="@id/target1"
        android:layout_toEndOf="@id/target1"
        android:layout_above="@id/target1"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:background="#FF5722"
        android:layout_toStartOf="@id/target1"
        android:layout_toEndOf="@id/target1"
        android:layout_below="@id/target1"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:background="#2196F3"
        android:layout_toRightOf="@id/target1"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>
    <TextView
        android:background="#2196F3"
        android:layout_toLeftOf="@id/target1"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </TextView>

</RelativeLayout>